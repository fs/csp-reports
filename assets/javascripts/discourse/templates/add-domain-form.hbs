<div class="grid">
  <div class="grid__item col-1-2">
    <div class="panel panel--info">
      <div class="panel__heading">Add new domain</div>
      <div class="panel__body">
        {{input type="text" value=buffered.name placeholder="Name" class="control--text mb-"}}
        {{input type="text" value=buffered.url placeholder="URL" class="control--text mb-"}}
        {{d-button action="save" label="csp_reports.save" class="btn--success"}}
        {{d-button action="cancel" label="csp_reports.cancel" class="btn"}}
      </div>
    </div>
  </div>
</div>
