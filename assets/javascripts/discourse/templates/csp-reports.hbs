<div class="container">
  <h3 class="mb">CSP Violation Reporter</h3>

  <p>Your report-uri URL: {{model.reportUri}}</p>

  {{#if addMode}}
    {{partial "add-domain-form"}}
  {{else}}
    {{d-button action="addDomain" icon="plus" label="csp_reports.add_domain" class="btn--primary"}}
  {{/if}}

  {{#each domain in model.domains}}
    <p>{{domain.name}}({{domain.url}})</p>
  {{/each}}
</div>
